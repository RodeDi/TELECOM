package java_project;

public class BaseCosts
{
  private int phone_number_;
  private int cost_;
  
  public BaseCosts(int phone_number, int cost) 
  {
    phone_number_ = phone_number;
    cost_ = cost;
  }
  
  private ArrayList<BaseCosts> costs = new ArrayList<BaseCosts>();
  FileWorker basecos = new FileWorker();
  
  public void writebasecos
  {
    basecustom.writeCosts(); 
  }
  
  public void addbasecos
  {
    basecustom.addNumber();
  }
  
  public void readbasecos
  {
    basecos.readCosts();
    costs.add(basecos);
  }
  public void viewbasecos
  {
    basecos.viewCosts();
  }
  
  public void editbasecos
  {
    basecustom.editNumber();
  }
  
  public void deletebasecos()
  {
    basecos.deleteCosts();
  }
  
  public void searchbasecos()
  {
    basecos.searchNumber();  
  }
}
